{% extends 'layout/layout.twig' %}

{% block content %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">

            <div class="col-12 text-center mt-5">
                <article class="post">

                    <h1 class="post-title">
                        {{ post.title }}
                    </h1>
                    <h3 class="post-subtitle">
                        {{ post.lead }}
                    </h3>

                    <p class="text-justify">{{ post.content }}</p>
                    <br>
                    <p class="post-meta">Posté par
                        <strong>{{ post.author }}</strong> le <em>{{ post.update | date("d/m/Y h:m") }}</em></p>
                </article>

            </div>
            <div class="col-12 mt-5">
                <hr>
                <h2>Commentaires :</h2>

                {% for comment in comment %}

                    <p class="mt-3"><strong>{{ comment.author }}</strong> le
                        <em>{{ comment.date | date("d/m/Y h:m") }}</em> :</p>
                    <p class="text-justify">{{ comment.content }}</p>

                    <hr>

                {% endfor %}
                <form class="mt-5" enctype="multipart/form-data" method="post"
                      action="../public/?id={{ post.id }}&access=blog!comment">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls has-success">
                            <label class="font-weight-bold" for="comment">Commenter :</label>
                            <textarea rows="2" class="form-control" placeholder="Votre message" name="comment" required
                                      data-validation-required-message="Veuillez entrer votre commentaire."></textarea>
                            <p class="help-block">Connexion nécessaire</p>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-outline-dark">Soumettre <i
                                    class="fas fa-paper-plane"></i></button>
                    </div>
                </form>
            </div>

            <!-- Pager -->
            <div class="clearfix ml-auto mb-5">
                <a class="btn btn-outline-dark" href="../public/?access=blog">Retour &rarr;</a>
            </div>

        </div>
    </div>

{% endblock %}